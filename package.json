{
  "name": "kothing-editor",
  "version": "0.1.0",
  "description": "A powerful WYSIWYG rich text web editor by pure javascript",
  "repository": {
    "type": "git",
    "url": "git://github.com/kothing/kothing-editor.git"
  },
  "main": "src/editor.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --inline --progress --config ./scripts/webpack.dev.js",
    "build": "cross-env NODE_ENV=production node ./scripts/build.js",
    "build-lib": "babel src --out-dir dist/lib",
    "lint": "eslint src --fix --ext .js,.ts",
    "lint:create": "eslint --init"
  },
  "author": "Kothing",
  "keywords": [
    "wysiwyg",
    "editor",
    "wysiwyg editor",
    "rich text",
    "rich editor",
    "rich text editor",
    "web",
    "html",
    "contenteditable",
    "KothingEditor",
    "javascript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^4.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.3.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.1",
    "lint-staged": "^10.3.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "ora": "^4.0.2",
    "prettier": "^2.1.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^4.1.0",
    "typescript": "~3.7.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "codemirror": "^5.57.0",
    "katex": "^0.12.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "prettier.endOfLine": "crlf"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,css,less,scss,md}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
